{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "build/main",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*.ts",
  ]
}

{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "outDir": "./build/cjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": false,
  }
}
